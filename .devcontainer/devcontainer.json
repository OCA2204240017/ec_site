{
  "name": "ec_site (dev)",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": "..",
    "target": "dev"
  },
  "forwardPorts": [3000],
  "remoteUser": "root",
  "postCreateCommand": "bundle install --jobs 4 --retry 3 && yarn install --check-files || true",
  "customizations": {
    "vscode": {
      "extensions": [
        "rebornix.Ruby",
        "castwide.solargraph",
        "eamodio.gitlens"
      ]
    }
  }
}
