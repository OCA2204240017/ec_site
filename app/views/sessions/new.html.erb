<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card mt-4">
        <div class="card-body">
          <h1 class="card-title">ログイン</h1>
          <%= form_with url: session_path, local: true do |f| %>
            <div class="mb-3">
              <%= f.label :login, "メールアドレスまたは名前", class: 'form-label' %>
              <%= f.text_field :login, required: true, class: 'form-control' %>
            </div>

            <div class="mb-3">
              <%= f.label :password, "パスワード", class: 'form-label' %>
              <%= f.password_field :password, required: true, class: 'form-control' %>
            </div>

            <div class="mb-3">
              <%= f.submit "ログイン", class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>