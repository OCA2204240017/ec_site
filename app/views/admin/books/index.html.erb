<div class="container">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1>書籍一覧</h1>
    <%= link_to '新規作成', new_admin_book_path, class: 'btn btn-primary' %>
  </div>

  <div class="list-group">
    <% @books.each do |b| %>
      <div class="list-group-item d-flex justify-content-between align-items-center">
        <div>
          <%= link_to b.title, admin_book_path(b), class: 'fw-bold' %>
          <div class="text-muted"><%= b.author %></div>
        </div>
        <div>
          <%= link_to '編集', edit_admin_book_path(b), class: 'btn btn-sm btn-outline-secondary me-2' %>
          <%= link_to '削除', admin_book_path(b), method: :delete, data: { confirm: '本当に削除しますか?' }, class: 'btn btn-sm btn-danger' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
