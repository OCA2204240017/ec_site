<%= form_with model: book, url: book.persisted? ? admin_book_path(book) : admin_books_path, local: true do |f| %>
  <div class="mb-3">
    <%= f.label :title, '書籍名', class: 'form-label' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :author, '著者名', class: 'form-label' %>
    <%= f.text_field :author, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :published_at, '発行日', class: 'form-label' %>
    <%= f.date_field :published_at, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :price, '価格', class: 'form-label' %>
    <%= f.number_field :price, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :status, '販売ステータス', class: 'form-label' %>
    <%= f.text_field :status, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :tag_ids, 'タグ', class: 'form-label' %>
    <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name do |cb| %>
      <div class="form-check">
        <%= cb.check_box(class: 'form-check-input') %>
        <%= cb.label(class: 'form-check-label') %>
      </div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
